{
  "manifest_version": 2,

  "name": "highlight",
  "description": "Find and highlight basketball players, display their wiki article",
  "version": "1.3",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_globs": ["*wikipedia.org*"],
      "css":["css/tipped.css", "css/style.css"],
      "js": ["tools/jquery-3.1.0.min.js", "tools/jquery.highlight.js", 
             "tools/tipped.js", "script.js"]
    }
  ]
}